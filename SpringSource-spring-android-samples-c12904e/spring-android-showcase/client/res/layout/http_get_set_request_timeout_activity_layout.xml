<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerVertical="true"
    >

    <TextView
        android:id="@+id/text_view_description"
        android:text="@string/text_http_get_set_request_timeout_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="8dip"
        />
        
    <TextView
        android:id="@+id/label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="14dip"
        android:text="Enter Server Delay in Seconds:"
        />
        
    <EditText
        android:id="@+id/edit_text_server_delay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dip"
        android:singleLine="true"
        android:inputType="number"
        />
        
    <TextView
        android:id="@+id/label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dip"
        android:text="Enter Request Timeout in Seconds:"
        />
        
    <EditText
        android:id="@+id/edit_text_request_timeout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dip"
        android:singleLine="true"
        android:inputType="number"
        />
    
    <Button
        android:id="@+id/button_submit"
        android:text="Submit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dip"
        />
    
</LinearLayout>
